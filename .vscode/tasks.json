{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "windows": {
                "problemMatcher": "$msCompile",
                "command": ".\\configure.bat"
            },
            "linux": {
                "problemMatcher": "$gcc",
                "command": "bash",
                "args": [
                    "configure.sh"
                ],
                "options": {
                    "env": {
                        "MPI_ENABLED": "true",
                        "BUILD_TYPE": "${input:BuildType}"
                    }
                }
            }
        }
    ],
    "inputs": [
        {
            "id": "BuildType",
            "description": "Build type",
            "default": "Release",
            "options":["Release","Debug"],
            "type": "pickString"
        }
    ]
}